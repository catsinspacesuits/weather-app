<% temperature_messages = ["Cold af", "Not too bad...", "The sun is shining!", "Hot as hell!"] %>

<% if @temperature > -100 && @temperature <= 7 %>
  <p><%= temperature_messages[0] %></p>
<% elsif @temperature > 7 && @temperature < 16 %>
    <p><%= temperature_messages[1] %></p>
<% elsif @temperature > 15 && @temperature < 27 %>
    <p><%= temperature_messages[2] %></p>
<% elsif @temperature > 26 %> 
    <p><%= temperature_messages[3] %></p>
<% else %>
<% end %>

